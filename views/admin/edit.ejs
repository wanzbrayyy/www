<%- include('../partials/header') %>

<style>
    body { background-color: #f4f4f4; }
    .form-container {
        max-width: 800px;
        margin: 40px auto;
        background: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.1);
        border-top: 5px solid #bf9b30;
    }
    .current-img {
        width: 150px;
        height: auto;
        border-radius: 4px;
        margin-top: 10px;
        border: 1px solid #ddd;
        padding: 3px;
    }
</style>

<div class="form-container">
    <div style="margin-bottom: 30px; border-bottom: 1px solid #eee; padding-bottom: 10px;">
        <h2>Edit <%= type === 'article' ? 'Article' : 'Content' %></h2>
    </div>

    <% if(type === 'article') { %>
        <!-- Form mengirim ke route Update dengan Method PUT -->
        <form action="/admin/article/update/<%= data._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            
            <div class="form-group" style="margin-bottom: 20px;">
                <label style="display:block; font-weight:bold; margin-bottom:8px;">Article Title</label>
                <input type="text" name="title" value="<%= data.title %>" class="form-control" style="width:100%; padding:10px; border:1px solid #ddd;" required>
            </div>

            <div class="form-group" style="margin-bottom: 20px;">
                <label style="display:block; font-weight:bold; margin-bottom:8px;">Current Image</label>
                <img src="/uploads/<%= data.image %>" class="current-img">
                <div style="margin-top: 10px;">
                    <label style="font-size:0.9rem; color:#666;">Change Image (Leave empty to keep current):</label>
                    <input type="file" name="image" class="form-control" style="width:100%; padding:10px; border:1px solid #ddd; margin-top:5px;">
                </div>
            </div>

            <div class="form-group" style="margin-bottom: 20px;">
                <label style="display:block; font-weight:bold; margin-bottom:8px;">Content</label>
                <textarea name="content" rows="10" class="form-control" style="width:100%; padding:10px; border:1px solid #ddd;" required><%= data.content %></textarea>
            </div>

            <div style="margin-top: 30px;">
                <button type="submit" style="background:#000; color:#bf9b30; padding:12px 30px; border:none; border-radius:50px; font-weight:bold; cursor:pointer;">Update Article</button>
                <a href="/admin" style="color:#666; text-decoration:underline; margin-left:15px;">Cancel</a>
            </div>

        </form>
    <% } %>
</div>

<%- include('../partials/footer') %>