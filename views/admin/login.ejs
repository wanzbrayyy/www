<%- include('../partials/header') %>

<style>
    .login-container {
        min-height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #000;
        background-image: linear-gradient(45deg, #000 25%, #111 25%, #111 50%, #000 50%, #000 75%, #111 75%, #111 100%);
        background-size: 20px 20px;
    }

    .login-card {
        background: #000;
        border: 2px solid #bf9b30; /* Warna Emas */
        padding: 40px;
        width: 100%;
        max-width: 400px;
        border-radius: 8px;
        box-shadow: 0 0 20px rgba(191, 155, 48, 0.2);
        color: #fff;
    }

    .login-title {
        text-align: center;
        font-family: sans-serif;
        font-weight: bold;
        color: #bf9b30;
        margin-bottom: 30px;
        letter-spacing: 2px;
        text-transform: uppercase;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        color: #ccc;
        font-size: 0.9rem;
    }

    .form-input {
        width: 100%;
        padding: 12px;
        background: #1a1a1a;
        border: 1px solid #333;
        color: #fff;
        border-radius: 4px;
        outline: none;
        transition: 0.3s;
    }

    .form-input:focus {
        border-color: #bf9b30;
    }

    .btn-login {
        width: 100%;
        padding: 12px;
        background: #bf9b30;
        color: #000;
        font-weight: bold;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: 0.3s;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .btn-login:hover {
        background: #d4ac3d;
        box-shadow: 0 0 10px #bf9b30;
    }

    .alert {
        padding: 10px;
        background: #3a1c1c;
        border: 1px solid #ff4444;
        color: #ffcccc;
        margin-bottom: 20px;
        font-size: 0.9rem;
        text-align: center;
        border-radius: 4px;
    }
</style>

<div class="login-container">
    <div class="login-card">
        <h2 class="login-title">Admin Access</h2>

        <% if(error_msg && error_msg.length > 0) { %>
            <div class="alert"><%= error_msg %></div>
        <% } %>

        <form action="/auth/login" method="POST">
            <div class="form-group">
                <label class="form-label">Username</label>
                <input type="text" name="username" class="form-input" required autocomplete="off">
            </div>
            <div class="form-group">
                <label class="form-label">Password</label>
                <input type="password" name="password" class="form-input" required>
            </div>
            <button type="submit" class="btn-login">Login</button>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>