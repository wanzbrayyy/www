<%- include('partials/header') %>

<style>
    .hero-section {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        width: 100%;
        gap: 2px;
        background: #222;
    }
    .hero-card {
        position: relative;
        height: 85vh;
        overflow: hidden;
        background: #000;
    }
    .hero-card img {
        height: 100%;
        width: 100%;
        transition: transform 0.6s ease, filter 0.6s ease;
        filter: brightness(0.6);
        object-fit: cover;
    }
    .hero-card:hover img {
        transform: scale(1.05);
        filter: brightness(0.9);
    }
    .hero-content {
        position: absolute;
        bottom: 10%;
        left: 50%;
        transform: translateX(-50%);
        width: 100%;
        text-align: center;
        padding: 0 20px;
        z-index: 2;
    }
    .hero-title {
        font-size: 1.8rem;
        font-weight: 300;
        text-transform: uppercase;
        letter-spacing: 1px;
        line-height: 1.3;
        color: var(--text-white);
        margin-bottom: 25px;
        white-space: pre-line;
    }
    @media (max-width: 992px) {
        .hero-section {
            display: flex;
            overflow-x: auto;
            scroll-snap-type: x mandatory;
            padding: 10px;
            gap: 10px;
            -ms-overflow-style: none;
            scrollbar-width: none;
        }
        .hero-section::-webkit-scrollbar {
            display: none;
        }
        .hero-card {
            min-width: 85%;
            height: 50vh;
            scroll-snap-align: center;
            border-radius: 8px;
        }
    }
</style>

<div class="hero-section">
    <div class="hero-card">
        <img src="/uploads/<%= heroes[0] ? heroes[0].image : 'default.jpg' %>" onerror="this.src='https://images.unsplash.com/photo-1608571423902-eed4a5e84e8c?q=80&w=1000'">
        <div class="hero-content">
            <h1 class="hero-title"><%= heroes[0] ? heroes[0].title : 'INDONESIAN WHOLESALE' %></h1>
        </div>
    </div>
    <div class="hero-card">
        <img src="/uploads/<%= heroes[1] ? heroes[1].image : 'default.jpg' %>" onerror="this.src='https://images.unsplash.com/photo-1556228723-8831b1afe3be?q=80&w=1000'">
        <div class="hero-content">
            <h1 class="hero-title"><%= heroes[1] ? heroes[1].title : 'PRIVATE LABELLING' %></h1>
        </div>
    </div>
    <div class="hero-card">
        <img src="/uploads/<%= heroes[2] ? heroes[2].image : 'default.jpg' %>" onerror="this.src='https://images.unsplash.com/photo-1596701062351-8c2c14d8a178?q=80&w=1000'">
        <div class="hero-content">
            <h1 class="hero-title"><%= heroes[2] ? heroes[2].title : 'BUSINESS WITH IMPACT' %></h1>
        </div>
    </div>
</div>

<div class="about-section bg-gold" id="about">
    <div class="container">
        <h2 class="about-title">PLASMADINAH</h2>
        <p class="about-text">
            Plasmadinah is an online wholesale essential oil manufacturer.<br>
            Leading the World's Cinnamon Oil, Lemongrass Oil, Blackpepper Oil & Sandalwood Oil Derivatives Production.
        </p>
        <div style="width: 50px; height: 2px; background: #000; margin: 20px auto;"></div>
        <p class="about-text">
            From Plant to Product: Pure Essential Oil Solutions<br>
            Extracted with excellence - backed by purity.
        </p>
        <p class="about-subtext">Leaves, Flowers, Seeds, Stems, Roots</p>
        <p class="about-subtext">Steam Distilled, Cold Pressed, Custom Extracted, Lab-Tested</p>
    </div>
</div>

<div class="services-section" id="b2b">
    <div class="container">
        <h2 class="section-title text-center">OUR BUSINESS B2B</h2>
        <div class="service-grid">
            <% services.forEach(service => { %>
                <div class="service-card">
                    <img src="/uploads/<%= service.image %>" class="service-img" onerror="this.src='https://via.placeholder.com/300'">
                    <div class="service-info">
                        <h3 class="service-title"><%= service.title %></h3>
                        <p class="service-desc"><%= service.description %></p>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<div class="category-section" id="products">
    <div class="container">
        <h2 class="cat-title">PLASMADINAH PRODUCT CATEGORIES</h2>
        <p class="cat-sub">Natural Essential Oils, Carrier Oils & Base Oils</p>
        <button id="openCatalogBtn" class="btn-gold" style="font-size: 1.2rem; padding: 15px 40px; color: #000; font-weight: 700;">OPEN PRODUCT CATALOG +</button>
    </div>
</div>

<div class="about-section bg-gold" id="private-labelling">
    <div class="container">
        <h2 class="about-title">PRIVATE LABELLING</h2>
        <p class="about-text" style="font-size: 1.2rem;">Your Brand, Our Expertise</p>
        <p class="about-text">OEM & ODM: Private/White Label Solutions at Scale</p>
        <div style="margin-top: 30px; font-weight: 600;">
            Green Points Loyalty + Quality Assured + Plant Based & Vegan + Sustainable Packaging + Carbon Negative
        </div>
    </div>
</div>

<div class="blog-section" id="blog">
    <div class="container">
        <h2 class="section-title">OUR LATEST BLOG</h2>
        <div class="blog-grid">
            <% articles.forEach(article => { %>
                <div class="blog-card">
                    <a href="/blog/<%= article._id %>">
                        <img src="/uploads/<%= article.image %>" class="blog-img" onerror="this.src='https://via.placeholder.com/300'">
                        <div class="blog-content">
                            <div class="blog-meta">ESSENTIAL OILS / <%= new Date(article.createdAt).toLocaleDateString() %></div>
                            <h3 class="blog-title"><%= article.title %></h3>
                            <p class="blog-snippet"><%= article.content.substring(0, 100) %>...</p>
                        </div>
                    </a>
                </div>
            <% }) %>
        </div>
        
        <div style="text-align: center; margin-top: 50px; display: flex; justify-content: center; gap: 10px;">
            <% if (totalPages > 1) { %>
                <% if (currentPage > 1) { %>
                    <a href="/?page=<%= currentPage - 1 %>#blog" style="background:#ddd; color:#333; padding: 10px 15px;">&laquo;</a>
                <% } %>
                
                <% for(let i = 1; i <= totalPages; i++) { %>
                    <a href="/?page=<%= i %>#blog" style="background:<%= i == currentPage ? '#333' : '#ddd' %>; color:<%= i == currentPage ? '#fff' : '#333' %>; padding: 10px 15px;"><%= i %></a>
                <% } %>
                
                <% if (currentPage < totalPages) { %>
                    <a href="/?page=<%= currentPage + 1 %>#blog" style="background:#ddd; color:#333; padding: 10px 15px;">&raquo;</a>
                <% } %>
            <% } %>
        </div>
    </div>
</div>

